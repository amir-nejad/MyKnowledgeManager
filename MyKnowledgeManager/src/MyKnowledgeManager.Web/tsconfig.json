{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "moduleResolution": "Node16",
    "module": "ES2015",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "wwwroot",
    "rootDir": ".",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [ "node_modules", "wwwroot" ],
  "include": [
    "scripts/**/*"
  ]
}